<Page x:Class="StudSigns.PasswordConfirmation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudSigns"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PasswordConfirmation">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="281">
        <TextBlock Text="Подтвердите пароль" HorizontalAlignment="Stretch" TextAlignment="Center" Style="{DynamicResource MaterialDesignTextBlock}" FontSize="16" Foreground="{DynamicResource MaterialDesignDarkForeground}"/>
        <PasswordBox x:Name="Pass" LostFocus="PassTB_LostFocus" GotFocus="PassTB_GotFocus" ToolTip="Введите пароль администратора" Margin="5" Foreground="{DynamicResource MaterialDesignDarkForeground}" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Height="28" Width="281" Password="Пароль"/>
        <Button x:Name="AddAdminConfirmButton" Content="Подтвердить" HorizontalAlignment="Stretch" Margin="5" Height="35" FontSize="16" Click="AddAdminConfirmButton_Click"/>
    </StackPanel>
</Page>
